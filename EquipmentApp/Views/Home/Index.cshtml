<h1> Hotel</h1>
<h3> Add</h3>

<form action="javascript:void(0);" method="POST" onsubmit="addEquipment()">
    <input type="text" id="EquipmentName" placeholder="hotelname" />
    <input type="text" id="EquipmentCurrency" placeholder="hoteltype" />
    <input type="text" id="EquipmentPurchasedate" placeholder="comments" />
    <input type="submit" value="Add" />
</form>

<div id="editForm">
    <h3>Edit</h3>

    <form action="javascript:void(0); " onsubmit="UpdateItem()">
        <input type="hidden" id="editEquipmentId" />
        <input type="text" id="editEquipmentName" placeholder="EquipmentName" />
        <input type="text" id="editEquipmentCurrency" placeholder="EquipmentCurrency" />
        <input type="text" id="editEquipmentPurchasedate" placeholder="EquipmentPurchasedate" />
        <input type="submit" value=" Update" />
    </form>
</div>

<div id="deleteForm">
    <h3>Delete</h3>

    <form action="javascript:void(0); " onsubmit=" DeleteItem()">
        <input type="text" id="deleteEquipmentlId" placeholder="Id"/>
        <input type="text" id="deleteEquipmentName" placeholder="HotelName" />
        <input type="text" id="deleteEquipmentCurrency" placeholder="HotelType" />
        <input type="text" id="deleteEquipmentPurchasedate" placeholder="HotelComments" />
        <input type="submit" value=" Delete" />
    </form>
</div>


<p id="counter"></p>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Equipment Id</th>
            <th>Equipment Name</th>
            <th>Equipment Currency</th>
            <th>EquipmentPurchasedate</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody id="equipmentlist"></tbody>
</table>

